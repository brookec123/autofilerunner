{
  "name": "autofilerunner",
  "displayName": "AutoFileRunner",
  "description": "",
  "icon": "icon/auto-file-and-function-comments-icon.png",
  "publisher": "brookec",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "autofilerunner.run-file"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "properties": {
        "brookec.autofilerunner.run-file.file-path": {
          "type": "string",
          "default": "",
          "description": "Location of the file to run. To find it, go to the VsCode explorer, right click on the name of the file and then click \"Copy Path\" and then paste it here. Example: C:\\Users\\brookec\\Desktop\\autofilerunner\\test\\sample.py"
        },
        "brookec.autofilerunner.run-file.default-commands": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Commands to run any file."
        },
        "brookec.autofilerunner.run-file.python-commands": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "python %filePath%"
          ],
          "description": "Commands to run a python file."
        },
        "brookec.autofilerunner.run-file.c-commands": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "cd %baseDirectory%",
            "gcc %filePath% -o %fileName%",
            ".\\%fileName%"
          ],
          "description": "Commands to run a C file."
        },
        "brookec.autofilerunner.run-file.cpp-commands": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "cd %baseDirectory%",
            "g++ %filePath% -o %fileName%",
            ".\\%fileName%"
          ],
          "description": "Commands to run a C++ file."
        },
        "brookec.autofilerunner.run-file.java-commands": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "javac -source 1.8 -target 1.8 -d target/classes -sourcepath src/main/java %filePath%",
            "java -cp target/classes com.example.%fileName%"
          ],
          "description": "Commands to run a Java file."
        }
      },
      "title": "Auto File Runner"
    },
    "commands": [
      {
        "command": "autofilerunner.run-file",
        "title": "Run File"
      }
    ],
    "keybindings": [
      {
        "command": "autofilerunner.run-file",
        "key": "alt+f5",
        "mac": "alt+f5"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.91.0",
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2",
    "@vscode/test-electron": "^2.3.6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/brookec123/autofilerunner.git"
  }
}